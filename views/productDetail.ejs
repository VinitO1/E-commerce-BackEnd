<%- include('partials/header') %>

<style>
	body {
		color: white; /* Sets the text color to white */
		background-color: black; /* Sets the background color to black */
	}
</style>

<div class="container mt-5">
	<div class="row">
		<div class="col-md-8">
			<img
				src="<%= product.image %>"
				alt="<%= product.title %>"
				class="img-fluid" />
		</div>
		<div class="col-md-4">
			<h2><%= product.title %></h2>
			<h5>Price: $<%= product.price %></h5>
		</div>
	</div>
</div>

<%- include('partials/footer') %>
