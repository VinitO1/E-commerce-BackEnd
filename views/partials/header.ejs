<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AKJewellers</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="css/style.css" rel="stylesheet" />
</head>
<body>
    <header class="p-3 text-bg-dark custom-sticky">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
                    <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap">
                        <use xlink:href="#bootstrap"></use>
                    </svg>
                </a>
                <img src="/images/AK jewelers.png" alt="AK Jewellers" width="40" height="32" class="d-inline-block align-text-top" />

                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/" class="nav-link px-2 text-white">Home</a></li>
                    <li><a href="/Earrings" class="nav-link px-2 text-white">Earrings</a></li>
                    <li><a href="/Rings" class="nav-link px-2 text-white">Rings</a></li>
                    <li><a href="/Necklaces" class="nav-link px-2 text-white">Necklaces</a></li>
                    <li><a href="/cart" class="nav-link px-2 text-white">Your Cart</a></li>
                </ul>

				<div class="text-end">
                    <% if (!user) { %> <!-- Only show login button if user is not logged in -->
                        <a href="/login" class="btn btn-outline-light me-2">Login</a>
                    <% } else { %>
                        <a href="/logout" class="btn btn-outline-light">Logout</a>
                    <% } %>
                </div>
			</div>
		</header>
	</body>
</html>
